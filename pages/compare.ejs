<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles.css">
  <title>Comparação entre <%= pokemon1.name %> e <%= pokemon2.name %></title>
</head>

<body>
  <div class="container mt-4">
    <h1 class="text-center">Comparação de Pokémons</h1>

    <div class="row text-center mb-4">
      <div class="col-md-6">
        <img src="<%= pokemon1.sprites.other.showdown.front_default %>" alt="<%= pokemon1.name %>" class="img-fluid pokemon-gif">
        <h3><%= pokemon1.name %></h3>
        <div>
          <% pokemon1.types.forEach(type => { %>
            <span class="badge type-<%= type.type.name %>"><%= type.type.name %></span>
          <% }) %>
        </div>
      </div>
      <div class="col-md-6">
        <img src="<%= pokemon2.sprites.other.showdown.front_default %>" alt="<%= pokemon2.name %>" class="img-fluid pokemon-gif">
        <h3><%= pokemon2.name %></h3>
        <div>
          <% pokemon2.types.forEach(type => { %>
            <span class="badge type-<%= type.type.name %>"><%= type.type.name %></span>
          <% }) %>
        </div>
      </div>
    </div>

    <!-- Tabela de Comparação de Habilidades -->
    <h3>Habilidades:</h3>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th><%= pokemon1.name %> Habilidades</th>
          <th><%= pokemon2.name %> Habilidades</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <ul>
              <% pokemon1.abilities.forEach(ability => { %>
              <li><%= ability.ability.name %></li>
              <% }) %>
            </ul>
          </td>
          <td>
            <ul>
              <% pokemon2.abilities.forEach(ability => { %>
              <li><%= ability.ability.name %></li>
              <% }) %>
            </ul>
          </td>
        </tr>
      </tbody>
    </table>

    <!-- Tabela de Comparação de Moves -->
    <h3>Moves:</h3>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th><%= pokemon1.name %> Moves(10)</th>
          <th><%= pokemon2.name %> Moves(10)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <ul>
              <% pokemon1.moves.slice(0, 10).forEach(move => { %>
              <li><%= move.move.name %></li>
              <% }) %>
            </ul>
          </td>
          <td>
            <ul>
              <% pokemon2.moves.slice(0, 10).forEach(move => { %>
              <li><%= move.move.name %></li>
              <% }) %>
            </ul>
          </td>
        </tr>
      </tbody>
    </table>

    <!-- Tabela de Comparação de Status -->
    <h3>Status:</h3>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th>Stats</th>
          <th><%= pokemon1.name %> Base Stats</th>
          <th><%= pokemon2.name %> Base Stats</th>
        </tr>
      </thead>
      <tbody>
        <% pokemon1.stats.forEach((stat, index) => { 
          const stat1 = stat.base_stat;
          const stat2 = pokemon2.stats[index].base_stat;
        %>
        <tr>
          <td><%= stat.stat.name %></td>
          <td class="<%= stat1 > stat2 ? 'text-success' : '' %>"><%= stat1 %></td>
          <td class="<%= stat2 > stat1 ? 'text-success' : '' %>"><%= stat2 %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>

</html>
